{
  "asar": false,
  "productName": "Simple Audio Player",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons/favicon.png",
    "target": [
      "nsis"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/splash.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons/favicon.png",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons/favicon.png",
    "target": [
      "AppImage"
    ]
  }
}